<%= form_with model: Idea.new do |form| %>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body, required: true, class: "textarea" %>
  </div>

  <div>
    <%= form.submit "Submit", class: "button" %>
  </div>
<% end %>

<ul class="ideas">
  <% @ideas.each do |idea| %>
    <li class="idea">
      <div class="idea__body"><%= idea.body %></div>
      <div class="idea__actions">
      <% unless @user.id == idea.user_id or @user.nil? %>
        <span class="tag idea__upvote <%= "is-upvoted" if idea.user_upvoted @user.id %>" data-upvotes="<%= idea.upvote_count %>"><%= link_to("ğŸ”¼ " + number_with_delimiter(idea.upvote_count), "/ideas/#{idea.id}/upvote", method: :POST, remote: true) %></span>
      <% else %>
        <span class="tag idea__upvote" data-upvotes="<%= idea.upvote_count %>"><%= "ğŸ”¼ " + number_with_delimiter(idea.upvote_count) %></span>
      <% end %>
      <span class="tag">â›”ï¸ Report</span>
      </div>
    </li>
  <% end %>
</ul>

<a href="/?p=<%= @page - 1 %>"><%= "Previous" if @has_previous %></a>

<a href="/?p=<%= @page + 1 %>"><%= "Next" if @has_next %></a>